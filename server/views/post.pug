extends layout.pug
block content
    .post-page
        .post-form
            h1.post-form__heading.ql-container.ql-snow 
                .ql-editor #{title}
            .post-form__author.ql-container.ql-snow 
                .ql-editor
                    p #{author}
                        span &bull;
                        time(datetime=date_iso) #{date}
                        if can_edit
                            span &bull;
                            a(href=edit_url) Edit post
            .post-form__story.ql-container.ql-snow
                .ql-editor !{story}